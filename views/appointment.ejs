<%- include('includes/header') %>
<%- include('includes/nav-dashboard') %>
<div class="container-fluid px-0 mb-5">
    <div class="banner-section position-relative">
        <img src="/images/carousel-1.jpg" class="img-fluid">
        <div class="search-section">
            <h2 class="text-center text-white">Book now to donate blood and plasma</h2>
            <div class="text-center mt-4">
                <input type="text" name="search" class="search-input" placeholder="Postal code">
                <button class="btn search-btn" onclick="">Search Booking</button>
            </div>
        </div>
    </div>
</div>
<div class="content-wrap">
    <h1 class="text-center">Location Near You</h1>
    <div class="login-container">
        <form action="postalcodesearch" method="POST" enctype="multipart/form-data">
           <div>
                <div class="row">
                    <div class="col-10">
                        <input id="postalcode" class="txtinput" placeholder="Postal Code" type="text" name="postalcode">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-center">
                    <div>
                        <% 
                            if(typeof(error) != 'undefined'){
                                %>
                               <div class="error"> <%= error%> </p>
                                <%
                        } %>
                            
                    </div>
                    <br/>
                    <input type="submit" value="Search" class="login">
                </div>
            </div>
            
        </form>
    </div>
</div>
<%- include('includes/footer') %>
            